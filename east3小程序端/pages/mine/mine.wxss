/* pages/mine/mine.wxss */
.container{
  background-color: #eeeeee;
  height : 100vh;
}
.partOne {
  transform: scale(1.3);
  display: flex;
  justify-content: space-between;
  background-color: #a7d3e8;
  margin-top: -200rpx;

  padding-top: 50rpx;
  padding-bottom: 50rpx;
}
.userinfo {

  display: flex;
  align-items: center;
  height: 128rpx;
  margin-left: 40rpx;
  color: rgb(255, 255, 255);
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 30rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  height: 128rpx;
}
.partOne .scanicon{

  display: flex;
  justify-content: flex-end;
  align-items: center;
  height: 128rpx;
  margin-right: 80rpx;
}
.partOne .scanicon image{  
  width: 80rpx;
  height: 80rpx;
}

/* pages/mine/mine.wxss */
.switchRole {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 128rpx;
  margin-left: 50rpx;
  margin-right: -30rpx;
  width: 200rpx;
  background-color: #a7d3e8;
  border-radius: 25rpx;
  padding: 5rpx;
}

.switchRole .role {
  width: 80rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 20rpx;
  color: #a7d3e8;
  background-color: white;
  border-radius: 25rpx;
}


