/* pages/superleave/superappeal/superappeal.wxss */
.container {
  background-color:  #d3e5f6;
  height: 100vh; 
  padding: 20px;
}

.list {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  width: 90%;
}

.item {
  display: flex;
  justify-content: space-between;
  background-color: #FFFFFF;
  margin: 5px 0; 
  margin-bottom: 20px;
  padding: 10px;
  border-radius: 5px;
  width: 99%; 
  z-index: 1000000;
}

.left {
  display: flex;
  flex-direction: column;
  width: 75%; 
}

.title {
  font-size: 14px; 
  font-weight: bold;
}

.content {
  font-size: 12px; 
  margin-bottom: 10px;
}

.right {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px; 
  width: 25%; 
}

.pending {
  color: #58AFDA;
}

.approved {
  color: #B5E6D0;
}

.denied {
  color: #DCA1A5;
}

.bottom-button {
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
  width: calc(100vw / 8);
  height:calc(100vw / 8);
}
