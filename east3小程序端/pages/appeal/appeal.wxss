.container {
  background:  -webkit-linear-gradient(top,#E4F3FA,#E6F3F9,#EBF4F9,#ECF4F7,#F0F3F8,#F4F5F7);
  height: 100vh; 
  padding: 20px;
}

.list {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  width:90%;
}

.item {
  display: flex;
  justify-content: space-between;
  background-color: #FBFDFC;
  margin: 5px 0; 
  margin-bottom: 20px;
  padding: 10px;
  border-radius: 30rpx;
  width: 99%;  
}

.left {
  display: flex;
  flex-direction: column;
  width: 78%; 
}

.title {
  font-size: 14px; 
  font-weight: bold;
}

.content {
  font-size: 12px; 
  margin-bottom: 10px;
}

.right {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px; 
  width: 22%; 
}

.pending {
  color: #58AFDA;
}

.approved {
  color: #B5E6D0;
}

.rejected {
  color: #DCA1A5;
}

.bottom-button {
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
  width: calc(100vw / 8);
  height:calc(100vw / 8);
}
